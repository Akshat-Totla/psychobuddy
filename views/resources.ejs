                    pdfLink: "https://applications.emro.who.int/docs/EMRPUB_leaflet_2019_mnh_214_en.pdf"
                },
                {
                    name: "Anxiety",
                    icon: "/image/anxiety.jpg",
                    pdfLink: "https://applications.emro.who.int/docs/WHOEMMNH231E-eng.pdf?ua=1"
                },
                {
                    name: "PTSD",
                    icon: "/image/ptsd.jpg",
                    pdfLink: "https://applications.emro.who.int/docs/WHOEMMNH235E-eng.pdf?ua=1"
                },
                {
                    name: "OCD",
                    icon: "/image/ocd.jpg",
                    pdfLink: "https://applications.emro.who.int/docs/WHOEMMNH232E-eng.pdf?ua=1"
                },
                {
                    name: "Bipolar Disorder",
                    icon: "/image/bipolar.jpg",
                    pdfLink: "https://applications.emro.who.int/docs/EMRPUB_leaflet_2019_mnh_216_en.pdf"
                },
                {
                    name: "Eating Disorders",
                    icon: "/image/eating-disorder.jpg",
                    pdfLink: "https://applications.emro.who.int/docs/EMRPUB_leaflet_2019_mnh_217_en.pdf"
                },
                {
                    name: "Schizophrenia",
                    icon: "/image/schizophrenia.jpg",
                    pdfLink: "https://applications.emro.who.int/docs/EMRPUB_leaflet_2019_mnh_223_en.pdf"
                },
                {
                    name: "Stress",
                    icon: "/image/stress.jpg",
                    pdfLink: "https://applications.emro.who.int/docs/WHOEMMNH236E-eng.pdf?ua=1"
                },
                {
                    name: "Panic disorder",
                    icon: "/image/panic.jpg",
                    pdfLink: "https://applications.emro.who.int/docs/WHOEMMNH233E-eng.pdf?ua=1"
                },

                {
                    name: "Phobias",
                    icon: "/image/phobias.jpg",
                    pdfLink: "https://applications.emro.who.int/docs/WHOEMMNH234E-eng.pdf?ua=1"
                },
                {
                    name: "Addiction",
                    icon: "/image/addiction.jpg",
