                },
                {
                    name: "Conduct disorder",
                    icon: "/image/conduct.jpg",
                    pdfLink: "https://applications.emro.who.int/docs/EMRPUB_leaflet_2019_mnh_217_en.pdf?ua=1&ua=1"
                },
                {
                    name: "Dementia",
                    icon: "/image/Dementia.jpg",
                    pdfLink: "https://applications.emro.who.int/docs/EMRPUB_leaflet_2019_mnh_218_en.pdf?ua=1&ua=1"
                },
                {
                    name: "Epilepsy and seizures",
                    icon: "/image/Epilepsy and seizures.jpg",
